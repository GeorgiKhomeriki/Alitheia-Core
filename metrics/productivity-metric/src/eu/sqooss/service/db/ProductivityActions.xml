<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.ProductivityActions" table="PRODUCTIVITY_ACTIONS">
    <id name="id" column="PRODUCTIVITY_ACTION_ID">
      <generator class="native" />
    </id>
    <many-to-one name="developer" column="DEVELOPER_ID" not-null="true" cascade="merge" />
    <property name="actionType" column="ACTION_TYPE" not-null="true" />
    <property name="isPositive" column="IS_POSITIVE"  />
    <property name="total" column="TOTAL" not-null="true" />
  </class>
</hibernate-mapping>