<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.metrics.productivity.db.ProductivityWeights" table="PRODUCTIVITY_WEIGHTS">
    <id name="id" column="PRODUCTIVITY_WEIGHT_ID">
      <generator class="native" />
    </id>
    <property name="actionType" column="ACTION_TYPE" not-null="true" />
    <property name="actionCategory" column="ACTION_CATEGORY" not-null="true" />
    <property name="weight" column="WEIGHT" not-null="true" />
  </class>
</hibernate-mapping>