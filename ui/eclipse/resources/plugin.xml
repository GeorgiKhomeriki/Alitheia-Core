    <extension point="org.eclipse.ui.propertyPages"> 
        <page 
            id="eu.sqooss.impl.plugin.properties.qualityPropertyPage" 
            name="Quality"
            class="eu.sqooss.impl.plugin.properties.QualityPropertyPage"
            category="eu.sqooss.impl.plugin.properties.projectPropertyPage">
            <enabledWhen>
            	<adapt
					type="org.eclipse.core.resources.IResource">
				</adapt>
          	</enabledWhen>
        </page> 
    </extension>
    <extension
          point="org.eclipse.ui.preferencePages">
       <page
             class="eu.sqooss.impl.plugin.preferences.ConfigurationPreferencePage"
             id="eu.sqooss.impl.plugin.preferences.configurationPreferencePage"
             name="SQO-OSS">
       </page>
    </extension>
    <extension
          point="org.eclipse.core.runtime.preferences">
