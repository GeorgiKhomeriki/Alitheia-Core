  <name>Alitheia UI Eclipse IDE plug-in</name>
  <url>http://ikaria.dmst.aueb.gr/ui/eclipse</url>
  <inceptionYear>2006</inceptionYear>
  <description>
    The eclipse plug-in provides the user interface to the Alitheia core.
  </description>

  <scm>
    <connection>
      scm:svn:https://svn.sqo-oss.org/trunk/ui/eclipse
    </connection>
    <developerConnection>
      scm:svn:https://svn.sqo-oss.org/trunk/ui/eclipse
    </developerConnection>
  </scm>

  <build>
    <defaultGoal>package</defaultGoal>
    <sourceDirectory>${basedir}/src</sourceDirectory>
    <outputDirectory>${basedir}/build</outputDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <outputDirectory>../build</outputDirectory>
          <finalName>${groupId}.${artifactId}-${version}</finalName>
          <archive>
            <manifestFile>${basedir}/META-INF/MANIFEST.MF</manifestFile>
            <addMavenDescriptor>false</addMavenDescriptor>
          </archive>
        </configuration> 
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.1</version>
        <configuration>
          <outputDirectory>${basedir}</outputDirectory>
          <finalName>sqoosslib</finalName>
          <appendAssemblyId>false</appendAssemblyId>
          <descriptors>
            <descriptor>assembly.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>
    </plugins>
    <resources>
      <resource>
        <directory>${basedir}/resources</directory>
        <targetPath>/</targetPath>
        <includes>
          <include>plugin.xml</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/resources</directory>
        <targetPath>eu/sqooss/impl/plugin/properties</targetPath>
        <includes>
          <include>PropertyPagesMessages.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/sqoosslib</directory>
        <targetPath>lib</targetPath>
      </resource>
    </resources>
  </build>

  <repositories>
    <repository>
      <id>sqoossrepo</id>
      <name>SQO-OSS Local Maven Repository</name>
      <url>file://${basedir}/../../sqoossrepo</url>
