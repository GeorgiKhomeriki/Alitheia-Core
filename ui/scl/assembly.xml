<assembly>
  <id>sqooss.scl</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <file>
      <source>${basedir}/target/scl-${version}.jar</source>
      <destName>eu.sqooss.${artifactId}_${version}.${packaging}</destName>
      <!-- Assembly 2.1 uses an octal representation of file modes, i.e.
        (dec) 420 goes into (oct) 644 -->
      <fileMode>420</fileMode>
    </file>
  </files>
</assembly>