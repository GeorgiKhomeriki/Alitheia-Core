<project>
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>eu.sqooss</groupId>
    <artifactId>ui</artifactId>
    <version>1.0.0</version>
  </parent>

  <groupId>eu.sqooss.ui</groupId>
  <artifactId>scl</artifactId>
  <version>1.0.0</version>
  <packaging>pom</packaging>

  <name>Alitheia UI Connector Library</name>
  <url>http://ikaria.dmst.aueb.gr/ui/scl</url>
  <inceptionYear>2006</inceptionYear>
  <description>
    The SQO-OSS connector library (SCL) provides a Java interface to the
    web-services of the Alitheia Core so that the UI can retrieve project
    and measurement data from the Core.
  </description>

  <scm>
    <connection>
      scm:svn:https://svn.sqo-oss.eu/devel/trunk/ui/scl
    </connection>
    <developerConnection>
      scm:svn:https://svn.sqo-oss.eu/devel/trunk/ui/scl
    </developerConnection>
  </scm>

  <build>
    <defaultGoal>assembly:assembly</defaultGoal>
    <sourceDirectory>${basedir}/src</sourceDirectory>
    <outputDirectory>${basedir}/build</outputDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <outputDirectory>${basedir}/target</outputDirectory>
          <finalName>${groupId}.${artifactId}-${version}</finalName>
          <archive>
            <manifestFile>${basedir}/manifest/manifest.mf</manifestFile>
          </archive>
          <descriptors>
            <descriptor>assembly.xml</descriptor>
          </descriptors>
          <executions>
            <execution>
              <id>${artifactId}</id>
              <phase>package</phase>
              <goals>
                <goal>assembly</goal>
              </goals>
            </execution>
          </executions>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <generatePom>false</generatePom>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <modules>
    <module>wslib</module>
    <module>sclib</module>
  </modules>
</project>

