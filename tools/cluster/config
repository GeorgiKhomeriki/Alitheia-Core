# where project configuration resides
project_lists=$scripts/projects

#where to create configuration files while importing projects
project_import_directory=$scripts/imported_projects

# where to find .procmailrc for mailing list subscriptions
procmail_home=/home/alitheia

# External tools
xml=/usr/bin/xmlstarlet ; if [ ! -f $xml ]; then echo "$xml not found!"; exit; fi
svnsync=/usr/bin/svnsync ; if [ ! -f $svnsync ]; then echo "$svnsync not found!"; exit; fi
curl=/usr/bin/curl; if [ ! -f $curl ]; then echo "$curl not found!"; exit; fi
sed=/bin/sed; if [ ! -f $sed ]; then echo "$sed not found!"; exit; fi
svnadmin=/usr/bin/svnadmin; if [ ! -f $svnadmin ]; then echo "$svnadmin not found!"; exit; fi

