<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.MetricType" table="METRIC_TYPE">
    <id name="id" column="METRIC_TYPE_ID">
      <generator class="native" />
    </id>
    <property name="type" column="TYPE" not-null="true" />
    <set name="metrics">
        <key column="METRIC_TYPE"/>
        <one-to-many class="eu.sqooss.service.db.Metric"/>
    </set>
  </class>
</hibernate-mapping>
