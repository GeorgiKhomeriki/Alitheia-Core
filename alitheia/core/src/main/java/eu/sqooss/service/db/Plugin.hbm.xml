<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.Plugin" table="PLUGIN">
    <id name="id" column="PLUGIN_ID">
      <generator class="native" />
    </id>
    <property name="name" column="NAME" />
    <property name="installdate" column="INSTALL_DATE" type="java.util.Date" />
    <property name="version" column="VERSION" />
    <property name="description" column="DESCRIPTION" />
    <property name="active" column="IS_ACTIVE" />
    <property name="hashcode" column="HASHCODE" unique="true" />
    <set name="configurations" inverse="true" cascade="all-delete-orphan" lazy="false">
        <key column="PLUGIN_ID"/>
        <one-to-many class="eu.sqooss.service.db.PluginConfiguration"/>
    </set>
    <set name="supportedMetrics" inverse="true" cascade="all-delete-orphan">
        <key column="PLUGIN_ID"/>
        <one-to-many class="eu.sqooss.service.db.Metric"/>
    </set>
  </class>
</hibernate-mapping>
