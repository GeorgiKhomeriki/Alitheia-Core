<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.ProjectFile" table="PROJECT_FILE">
    <id name="id" column="PROJECT_FILE_ID">
      <generator class="native" />
    </id>
    <property name="name" column="FILE_NAME" />
    <many-to-one name="projectVersion" column="PROJECT_VERSION_ID" not-null="true" cascade="merge"/>
    <many-to-one name="state" column="STATE_ID" not-null="true" cascade="merge"/>
    <property name="isDirectory" column="IS_DIRECTORY" />
    <many-to-one name="dir" column="DIRECTORY_ID" not-null="true" cascade="merge"/>
    <many-to-one name="copyFrom" column="COPY_FROM_ID" cascade="merge"/>
    <many-to-one name="validFrom" column="VALID_FROM_ID" cascade="merge" not-null="true"/>
    <many-to-one name="validUntil" column="VALID_TO_ID" cascade="merge" not-null="true"/>
    
    <set name="measurements" inverse="true" cascade="all-delete-orphan">
        <key column="PROJECT_FILE_ID"/>
        <one-to-many class="eu.sqooss.service.db.ProjectFileMeasurement"/>
    </set>
  </class>
</hibernate-mapping>
