<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.MailMessage" table="MAILMESSAGE">
    <id name="id" column="ID">
      <generator class="native" />
    </id>
    <many-to-one name="sender" column="SENDER_ID" not-null="true" cascade="merge" />
    <many-to-one name="list" column="MLIST_ID" not-null="true" cascade="merge" />
    <property name="messageId" column="MESSAGEID" not-null="true" />
    <property name="sendDate" column="SEND_DATE" />
    <property name="arrivalDate" column="ARRIVAL_DATE" />
    <property name="subject" column="SUBJECT" length="512" />
    <property name="filename" column="FILE_NAME" />
  </class>
</hibernate-mapping>

