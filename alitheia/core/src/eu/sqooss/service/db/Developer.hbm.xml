<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.Developer" table="Developer">
    <id name="id" column="DEVELOPER_ID">
      <generator class="native" />
    </id>
    
    <property name="name" column="NAME" />
    <property name="email" column="EMAIL" />
    <property name="username" column="USERNAME" />
    <many-to-one name="storedProject" column="STORED_PROJECT_ID" cascade="merge"/>
    <set name="commits" inverse="true" cascade="all-delete-orphan">
        <key column="COMMITTER_ID"/>
        <one-to-many class="eu.sqooss.service.db.ProjectVersion"/>
    </set>
    <set name="mails" inverse="true" cascade="all-delete-orphan">
        <key column="SENDER_ID"/>
        <one-to-many class="eu.sqooss.service.db.MailMessage"/>
    </set>
    <set name="bugReportMessages" inverse="true" cascade="all-delete-orphan">
        <key column="BUG_REPORTER_ID"/>
        <one-to-many class="eu.sqooss.service.db.BugReportMessage"/>
    </set>
  </class>
</hibernate-mapping>
