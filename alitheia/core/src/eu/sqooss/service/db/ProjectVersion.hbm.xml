<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.ProjectVersion" table="PROJECT_VERSION">
    <id name="id" column="PROJECT_VERSION_ID">
      <generator class="native" />
    </id>
    <many-to-one name="project" column="STORED_PROJECT_ID" not-null="true" cascade="merge" />
    <property name="version" column="VERSION" />
    <property name="timestamp" column="TIMESTAMP" />
    <many-to-one name="committer" column="COMMITTER_ID" not-null="true" cascade="merge" />
    <property name="commitMsg" column="COMMIT_MESSAGE" length="512"/>
    <property name="properties" column="PROPERTIES" length="512"/>
    <set name="versionFiles" inverse="true" cascade="all-delete-orphan">
        <key column="PROJECT_VERSION_ID"/>
        <one-to-many class="eu.sqooss.service.db.ProjectFile"/>
    </set>
    <set name="fileGroups" inverse="true" cascade="all-delete-orphan">
        <key column="PROJECT_VERSION_ID"/>
        <one-to-many class="eu.sqooss.service.db.FileGroup"/>
    </set>
    <set name="tags" inverse="true" cascade="all-delete-orphan">
        <key column="TAG_VERSION"/>
        <one-to-many class="eu.sqooss.service.db.Tag"/>
    </set>
    <set name="bugs" inverse="true" cascade="all-delete-orphan">
        <key column="COMMIT_ID"/>
        <one-to-many class="eu.sqooss.service.db.Bug"/>
    </set>
    <set name="measurements" inverse="true" cascade="all-delete-orphan">
        <key column="PROJECT_VERSION_ID"/>
        <one-to-many class="eu.sqooss.service.db.ProjectVersionMeasurement"/>
    </set>
    <set name="filesForVersion" table="FILE_VERSION_JOIN">
      <key column="PROJECT_VERSION_ID"/>
      <many-to-many class="eu.sqooss.service.db.ProjectFile" column="PROJECT_FILE_ID"/>
    </set>
  </class>
</hibernate-mapping>
