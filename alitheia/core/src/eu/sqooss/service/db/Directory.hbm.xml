<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.Directory" table="DIRECTORY">
    <id name="id" column="DIRECTORY_ID">
      <generator class="native" />
    </id>
    <property name="path" column="PATH" unique="true" />
    <set name="files" inverse="true" cascade="all-delete-orphan">
        <key column="DIRECTORY_ID"/>
        <one-to-many class="eu.sqooss.service.db.ProjectFile"/>
    </set>
    
  </class>
</hibernate-mapping>

