<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.User" table="USER">
    <id name="id" column="USER_ID">
      <generator class="native" />
    </id>
    <property name="name" column="NAME" not-null="true" />
    <property name="level" column="LEVEL" />
    <property name="registered" column="REGISTERED" />
    <property name="lastLogin" column="LASTLOGIN" />
    <property name="password" column="PASSWORD" not-null="true" />
    <property name="email" column="EMAIL" not-null="true" />
    
    <set name="groups" table="GROUP_USER" inverse="true">
      <key column="USER_ID"/>
      <one-to-many class="eu.sqooss.service.db.GroupUser"/>
    </set>
  </class>
</hibernate-mapping>

