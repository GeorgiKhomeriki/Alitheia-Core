<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.User" table="USERLOGINS">
    <id name="id" column="USERID">
      <generator class="native" />
    </id>
    <property name="name" column="NAME" not-null="true" />
    <property name="level" column="LEVEL" />
    <property name="registered" column="REGISTERED" />
    <property name="lastLogin" column="LASTLOGIN" />
    <property name="password" column="PASSWORD" not-null="true" />
    <property name="email" column="EMAIL" not-null="true" />
    
    <set name="groups" table="GROUPUSER">
        <key column="USERID"/>
        <many-to-many column="GROUPID" class="eu.sqooss.service.db.Group"/>
    </set>
  </class>
</hibernate-mapping>

