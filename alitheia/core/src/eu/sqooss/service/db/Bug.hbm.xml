<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.Bug" table="BUG">
    <id name="id" column="BUG_ID">
      <generator class="native" />
    </id>
    <many-to-one name="project" column="STORED_PROJECT_ID" />
    <property name="updateRun" column="UPDATE_RUN" />
    <property name="bugID" column="BUG_EXTERNAL_ID" />
    <many-to-one name="status" column="BUG_STATUS_ID" />
    <property name="creationTS" column="CREATION_TS" />
    <property name="deltaTS" column="DELTA_TS" />
    <many-to-one name="reporter" column="REPORTER_ID" />
    <many-to-one name="resolution" column="BUG_RESOLUTION_ID" />
    <many-to-one name="severity" column="BUG_SEVERITY_ID" />
    <many-to-one name="priority" column="BUG_PRIORITY_ID" />
    <property name="shortDesc" column="SHORT_DESC" />
    <set name="reportMessages" inverse="true" cascade="all-delete-orphan">
      
        <key column="BUG_ID"/>
        <one-to-many class="eu.sqooss.service.db.BugReportMessage"/>
    </set>
  </class>
</hibernate-mapping>
