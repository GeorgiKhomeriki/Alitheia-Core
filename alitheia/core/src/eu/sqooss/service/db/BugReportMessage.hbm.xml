<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.BugReporMessage" table="BUG_REPORT_MESSAGE">
    <id name="id" column="BUG_REPORT_MESSAGE_ID">
      <generator class="native" />
    </id>
    <many-to-one name="bug" column="BUG_ID" not-null="TRUE"/>
    <many-to-one name="bugReporter" column="BUG_REPORTER_ID" not-null="TRUE"/>
    <property name="description" column="DESCRIPTION" />
    <property name="action" column="ACTION" />
  </class>
</hibernate-mapping>
